

<div class = "col-md-4">
  <h3>So here's your list of lines</h3>
  <% if @lines.any?() %>
  <p>Click on a line to see it's associated stations</p>
  <ul>
    <% @lines.each() do |line| %>
    <li><a href = "/line/<%= line.id() %>"><%= line.name() %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no lines yet.</p>
  <% end %>
</div>

<div class = "col-md-4">
  <h3>So here's your list of stations</h3>
  <% if @stations.any?() %>
  <p>Click on a station to see it's associated lines</p>
  <ul>
    <% @stations.each() do |station| %>
    <li><a href = "/station/<%= station.name() %>"><%= station.name() %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no stations yet.</p>
  <% end %>
</div>
